/* to display picture within an horizontal slide */
/* from http://www.cssplay.co.uk/menu/gallery3l */
/* Stu Nicholls CSSplayExperiments with Cascading Style Sheets */

#gallery_horizontal
{
  padding:0; 
  margin:0 auto 5em auto; 
  list-style-type:none; 
  overflow:hidden; 
  width:495px; 
  height:241px; 
  border:2px solid __UP_BorderCol__; 
  background:#fff url(__UP_BackPic__);
}




#gallery_horizontal li {
  float:left;
    list-style: url( );
    margin: 0;
    padding: 0;
  list-style-type:none; 
  }
#gallery_horizontal li a {
  display:block; 
  height:240px;
  width:28px; 
  float:left; 
  text-decoration:none; 
  border-right:1px solid #fff; 
  cursor:default;
  }
#gallery_horizontal li a img {
/* use 27px, with IE 6 28px flash the last picture */
  width:27px;  
  height:240px; 
  border:0;
  }
#gallery_horizontal li a:hover {
  background:#eee; 
  width:320px;
  }
#gallery_horizontal li a:hover img {
  width:320px;
  }

.aclink
{
border: 0;text-decoration: none;
}

